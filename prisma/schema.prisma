generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                 Int      @id @default(autoincrement())
  email              String   @unique
  password           String
  name               String?
  createdAt          DateTime @default(now())

  // --- Step 1: Account Basics ---
  phone              String?   // Added for contact

  // --- Step 2: Safety & Onboarding ---
  onboardingComplete Boolean  @default(false)
  emergencyName      String?
  emergencyPhone     String?
  medicalConditions  String?
  injuries           String?
  waiverAccepted     Boolean  @default(false)

  // --- Step 3: Physical & Goals (Optional/Later) ---
  weight             Float?
  height             Float?
  skillLevel         String?   // e.g., "Beginner", "Advanced"
  primaryInterest    String?   // e.g., "BJJ", "MMA"
}

